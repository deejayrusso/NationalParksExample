@model NationalParks.Models.Parks


<h1>Parks</h1>
<hr />

@foreach (var item in Model.data)
{
    <div>
        <h3>
            @Html.DisplayFor(modelItem => item.fullName)
        </h3>
        <div>
            @Html.DisplayFor(modelItem => item.description)
        </div>
        <a href="@item.url" target="_blank">
            @Html.DisplayFor(modelItem => item.url)
        </a>
        <div>
            <h5>Directions: </h5>
            @Html.DisplayFor(modelItem => item.directionsInfo)
        </div>
        <div>
            <h5>Weather: </h5>
            @Html.DisplayFor(modelItem => item.weatherInfo)
        </div>
        <div>
            <h5>Hours: </h5>
            @foreach (var day in item.operatingHours)
                {
                    @Html.DisplayFor(d => day.standardHours)
                }
        </div>
    </div>
    <br />
}

<script>
    alertDbSave(@ViewBag.dbSuccessComp);
</script>
